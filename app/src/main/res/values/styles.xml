<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/white</item>
        <!--<item name="android:colorControlHighlight" tools:targetApi="lollipop">@color/light_green</item>-->
        <item name="android:textViewStyle">@style/BMCVTextViewMedium</item>
        <item name="android:buttonStyle">@style/BMCVTextViewButton</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BMCVTextViewMedium" parent="android:Widget.TextView">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="paddingStart">16dp</item>
        <item name="paddingEnd">16dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLength">500</item>
    </style>

    <style name="BMCVTextViewSmall" parent="BMCVTextViewMedium">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BMCVTextViewLarge" parent="BMCVTextViewMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BMCVTextViewAutoSize" parent="BMCVTextViewMedium">
        <item name="android:textColor">@color/black</item>
        <item name="android:autoSizeTextType" tools:targetApi="o">uniform</item>
        <item name="android:autoSizeStepGranularity" tools:targetApi="o">2sp</item>
        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">28sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BMCVTextViewButton" parent="BMCVTextViewMedium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextViewTitle" parent="BMCVTextViewMedium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
